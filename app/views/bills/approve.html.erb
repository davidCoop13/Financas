<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Conta a ser aprovada</div>

              <p id="notice"><%= notice %></p>

              <p>
                <b>Número de referência:</b>
                <%= @bill.number %>
              </p>

              <p>
                <b>Data do pagamento:</b>
                <%= @bill.payment_date %>
              </p>

              <p>
                <b>Método de pagamento:</b>
                <%= @bill.payment_method %>
              </p>

              <p>
                <b>Valor:</b>
                <%= @bill.amount %>
              </p>

              <p>
                <b>Aprovado:</b>
                <%= @bill.approved %>
              </p>

              <p>
                <b>Conta:</b>
                <%= @bill.account.name %>
              </p>

              <p>
                <b>Categoria:</b>
                <%= @bill.category %>
              </p>


              <%= link_to 'Aprovar', approveexec_bill_path(@bill), :class => 'btn btn-mini medium-blue' %> 
              <%= link_to 'Voltar', "/bills/requests", :class => 'btn btn-mini medium-blue' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
