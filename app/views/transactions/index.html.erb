<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Movimentação</div>


              <div class="box bordered" style="position:relative;">
              <div class="box-header" >
                <i class="icon-signal"></i> Lista de transações
              </div>

              <table class="table table-striped data-table">

                <thead>
                <tr>
                  <th>Referência</th>
                  <th>Data</th>
                  <th>Descrição</th>
                  <th>Valor</th>
                  <th>Conta</th>
                  <th>Ações</th>
                </tr>
                </thead>

                <tbody>

                  <% @transactions.each do |transaction| %>
                      <tr>
                          <td><%= transaction.number %></td>
                          <td><%= transaction.date %></td>
                          <td><%= transaction.description %></td>
                          <td>R$<%= transaction.amount %></td>
                          <td><%= transaction.account.name %></td>
                          <td width="160px" >
                              <%= link_to 'Detalhar', transaction, :class => 'btn btn-mini medium-blue' %>
                          </td>
                      </tr>
                <% end %>

                </tbody>
              </table>
              </div>
              <br />

              <%= link_to 'Nova transação', new_transaction_path, :class => 'btn btn-mini medium-blue' %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>