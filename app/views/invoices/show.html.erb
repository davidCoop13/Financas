<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Conta a receber</div>

              <p id="notice"><%= notice %></p>

              <p>
                <b>Número de referência:</b>
                <%= @invoice.number %>
              </p>

              <p>
                <b>Data do recebimento:</b>
                <%= @invoice.payment_date %>
              </p>

              <p>
                <b>Valor:</b>
                R$<%= @invoice.amount %>
              </p>

              <p>
                <b>Recebido:</b>
                <%= @invoice.paid %>
              </p>

              <p>
                <b>Categoria:</b>
                <%= @invoice.category.name %>
              </p>


              <%= link_to 'Editar', edit_invoice_path(@invoice), :class => 'btn btn-mini medium-blue' %> 
              <%= link_to 'Voltar', invoices_path, :class => 'btn btn-mini medium-blue' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
