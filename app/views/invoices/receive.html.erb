<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Conta a receber</div>

              <p id="notice"><%= notice %></p>

              <p>
                <b>Número de referência:</b>
                <%= @invoice.number %>
              </p>

              <p>
                <b>Data do recebimento:</b>
                <%= @invoice.payment_date %>
              </p>

              <p>
                <b>Valor:</b>
                R$<%= @invoice.amount %>
              </p>

              <p>
                <b>Conta Esperada:</b>
                <%= @invoice.account.name %>
              </p>              

              <p>
                <b>Categoria:</b>
                <%= @invoice.category.name %>
              </p>


              <p>
                <b>Escolha a Conta para receber:</b>
                <table class="table table-striped data-table">
                  <tr>
                    <th>Nome</th>
                    <th>Número</th>
                    <th>Saldo</th>
                    <th></th>
                  </tr>

                <% @accounts.each do |account| %>
                  <tr>
                    <td><%= account.name %></td>
                    <td><%= account.number %></td>
                    <td><%= account.SomaTotalTransacoes %></td>
                  <td><%= link_to 'Receber', receiveexec_invoice_path(@invoice, account_id: account), :class => 'btn btn-mini medium-blue'%></td>
                  </tr>
                <% end %>
                </table>
              </p>

              <%= link_to 'Voltar', invoices_path, :class => 'btn btn-mini medium-blue' %>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
