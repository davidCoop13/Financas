<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Contas</div>


              <div class="box bordered" style="position:relative;">
              <div class="box-header" >
                <i class="icon-signal"></i> Lista de Contas
              </div>

              <table class="table table-striped data-table">

                <thead>
                <tr>
                  <th>Nome</th>
                  <th>Numero</th>
                  <th>Saldo</th>
                  <th>Ações</th>
                </tr>
                </thead>

                <tbody>


                    <% @accounts.each do |account| %>
                      <tr>
                        <td><%= account.name %></td>
                        <td><%= account.number %></td>
                        <td><%= account.SomaTotalTransacoes%></td>
                    
                         <td >
                              <%= link_to 'Detalhar', account, :class => 'btn btn-mini medium-blue' %>
                        
                              <%= link_to 'Editar', edit_account_path(account), :class => 'btn btn-mini medium-blue' %>
                              <%= link_to 'Apagar', account, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini medium-blue' %>
                       </td>
                      </tr>
                <% end %>

                </tbody>
              </table>
              </div>
              <br />

              <%= link_to 'Nova Conta', new_account_path, :class => 'btn btn-mini medium-blue' %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>