<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Contas</div>

              <p id="notice"><%= notice %></p>


              <p>
                <b>Nome:</b>
                <%= @account.name  %>
              </p>

              <p>
                <b>Number:</b>
                <%=  @account.number %>
              </p>

              <p>
                <b>Transactions:</b>
                <%= @account.transaction %>
              </p>

              <p>
                <b>Bill:</b>
                <%= @account.bill %>
              </p>

              <p>
                <b>Invoice:</b>
                <%= @account.invoice %>
              </p>

              <%= link_to 'Editar', edit_account_path(@account) , :class => 'btn btn-mini medium-blue' %> 
              <%= link_to 'Excluir', @transaction, :method => :delete, :confirm => "Tem certeza que deseja apagar?", :class => 'btn btn-mini medium-blue' %>
              <%= link_to 'Voltar',accounts_path, :class => 'btn btn-mini medium-blue' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>