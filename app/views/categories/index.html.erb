<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">

              <div class="section-title">Categorias</div>


              <div class="box bordered" style="position:relative;">
              <div class="box-header" >
                <i class="icon-signal"></i> LISTA DE CATEGORIAS
              </div>

              <table class="table table-striped data-table">

                <thead>
                  <tr>
                      <th>Nome</th>
                      <th>Ações</th>
                  </tr>
                </thead>

                <tbody>

                 <% @categories.each do |category| %>
                      <tr>
                        <td><%= category.name %></td>
                        <td>

                        <%= link_to 'Detalhar', category, :class => 'btn btn-mini medium-blue'   %>
                        <%= link_to 'Editar', edit_category_path(category), :class => 'btn btn-mini medium-blue'  %>
                        <%= link_to 'Deletar', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini medium-blue' %>
                       </td>
                     </tr>
                <% end %>

                </tbody>
              </table>
              </div>
              <br />

              <%= link_to 'Nova Categoria', new_category_path, :class => 'btn btn-mini medium-blue' %>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>